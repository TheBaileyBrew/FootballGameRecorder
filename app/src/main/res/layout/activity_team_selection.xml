<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/football_field"
    android:orientation="vertical"
    tools:context="com.example.android.footballgamerecorder.TeamSelection">

    <Spinner
        style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
        android:background="#66ffffff"
        android:id="@+id/teamOne_spinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:fontFamily="@font/freshman"
        android:textSize="@dimen/medium_font"
        android:gravity="center" />
    <ImageView
        android:id="@+id/team_one_spinner_team_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="@dimen/small_padding"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:gravity="center"
        android:contentDescription="TODO" />
    <Spinner
        style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
        android:background="#66ffffff"
        android:id="@+id/teamTwo_spinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:text="Choose Away Team"
        android:textSize="@dimen/medium_font"
        android:gravity="center" />
    <ImageView
        android:id="@+id/team_two_spinner_team_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:gravity="center"
        android:contentDescription="TODO" />
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="onClickStartGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".65"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:layout_marginBottom="@dimen/small_med_padding"
        android:background="@drawable/border"
        android:fontFamily="@font/freshman"
        android:textColor="#111111"
        android:textStyle="bold"
        android:textSize="@dimen/medium_font"
        android:text="@string/start_game" />
</LinearLayout>
