                            />
                        <TextView
                            android:id="@+id/team_two_pass_yardage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/small_med_padding"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:layout_below="@id/team_two_defensive_td"
                            android:layout_toRightOf="@id/team_two_pass_stats"
                            android:text="Current Yards: "
                            />
                        <Button
                            android:id="@+id/qb_two_pass_attempt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_pass_stats"
                            android:text="completed pass"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/qb_two_incomplete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_pass_stats"
                            android:layout_toRightOf="@id/qb_two_pass_attempt"
                            android:text="incompletion"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/qb_two_interception"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_pass_stats"
                            android:layout_toRightOf="@id/qb_two_incomplete"
                            android:text="interception"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/qb_two_fumb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_pass_stats"
                            android:layout_toRightOf="@id/qb_two_interception"
                            android:text="fumble"
                            android:textSize="@dimen/small_font"
                            />
                        <TextView
                            android:id="@+id/team_two_rush_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:layout_below="@id/qb_two_pass_attempt"
                            android:text="RUSHING STATISTICS"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:id="@+id/team_two_rush_yardage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/small_med_padding"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:layout_toRightOf="@+id/team_two_rush_stats"
                            android:layout_below="@+id/qb_two_incomplete"
                            android:text="Current Yards: "
                            />
                        <Button
                            android:id="@+id/team_two_rushing_minus_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_rush_stats"
                            android:text="-1"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/team_two_rushing_plus_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_rush_stats"
                            android:layout_toRightOf="@id/team_two_rushing_minus_one"
                            android:text="+1"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/team_two_rushing_plus_ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_rush_stats"
                            android:layout_toRightOf="@id/team_two_rushing_plus_one"
                            android:text="+10"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/team_two_rushing_fumble"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_rush_stats"
                            android:layout_toRightOf="@id/team_two_rushing_plus_ten"
                            android:text="fumble"
                            android:textSize="@dimen/small_font"
                            />
