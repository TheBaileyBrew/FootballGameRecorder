                            android:id="@+id/team_two_rec_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:layout_below="@id/team_two_rushing_minus_one"
                            android:text="RECEIVING STATISTICS"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:id="@+id/team_two_rec_yardage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/small_med_padding"
                            android:layout_marginTop="@dimen/medium_padding"
                            android:layout_toRightOf="@+id/team_two_rec_stats"
                            android:layout_below="@+id/team_two_rushing_minus_one"
                            android:text="Current Yards: "
                            />
                        <Button
                            android:id="@+id/team_two_receiving_minus_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_rec_stats"
                            android:text="-1"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/team_two_receiving_plus_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_rec_stats"
                            android:layout_toRightOf="@id/team_two_receiving_minus_one"
                            android:text="+1"
                            android:textSize="@dimen/small_font"
                            />
                        <Button
                            android:id="@+id/team_two_receiving_plus_ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/team_two_rec_stats"
                            android:layout_toRightOf="@id/team_two_receiving_plus_one"
                            android:text="+10"
